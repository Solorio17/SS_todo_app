<% include ../views/partials/header.ejs%>
<div class="row">
  <div class="col-md-6">
    <form method="post" action="/todo/edit/<%= todo._id %>">
      <div class="form-group">
        <label>To Do Name</label>
        <input class="form-control" type="text" name="text" placeholder="Add To Do" value="<%= todo.text %>">
      </div>
      <div class="form-group">
        <label>To Do Body</label>
        <textarea class="form-control" name="body" placeholder="Add Body"><%= todo.body %></textarea>
      </div>
      <br>
      <button class="btn btn-success" type="submit">Submit</button>
      <a class="btn btn-danger" href="/">Cancel</a>
    </form>
  </div>
</div>
<% include ../views/partials/footer.ejs%>
